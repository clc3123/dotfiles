--smart-case
--follow
# Use this in project .ackrc
# --ignore-dir=vendor/.bundle

# See ack --help=types for a list of valid types.

# markdown
--type-add=plaintext:ext:md,mkd,mkdn,markdown,textile,rst,txt
# template
--type-add=html:ext:slim,haml,erb,hjs,hbs,handlebars
# javascript
--type-add=js:ext:coffee
# stylesheet
--type-add=css:ext:sass,scss,less
